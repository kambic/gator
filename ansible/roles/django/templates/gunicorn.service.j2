[Unit]
Description=Gunicorn service for {{ app_name }} in {{ app_path }}
After=network.target

[Service]
{#User=e-kambicr#}
{#Group=e-kambicr#}
UMask=0002
WorkingDirectory={{ app_path }}
EnvironmentFile={{ app_path }}/.env
ExecStart={{ venv_path }}/bin/gunicorn -c config/gunicorn.py
{#ExecStart={{ venv_path }}/bin/gunicorn -c config/gunicorn.py --bind {{ bind_url }}#}

Restart=always

[Install]
WantedBy=multi-user.target
